<div ng-controller="MainCtrl">

  <div class="row", style="margin: 0;">
    <div class="col-sm-4 col-sm-offset-4" style="padding: 0;">
      <div ng-repeat="post in posts">
        <div class="row" style="margin: 0;">
          {{post.title}}
        </div>
        <div class="row" style="margin: 0;">
          {{post.details}}
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row" style="margin: 0;">
    <div class="col-sm-4 col-sm-offset-4" style="padding: 0;">
      <form ng-submit="addPost(newPost)">
        <input type="text" ng-model="newPost.title" placeholder="add post title..." class="form-control">
        <input type="text" ng-model="newPost.details" placeholder="add post details..." class="form-control">
        <input type="submit" value="Submit Post">
      </form>

    </div>

  </div>

</div>
